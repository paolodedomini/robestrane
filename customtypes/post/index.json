{
  "format": "page",
  "id": "post",
  "label": "post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "title": {
        "type": "Text",
        "config": {
          "label": "title",
          "placeholder": "title"
        }
      },
      "article": {
        "type": "StructuredText",
        "config": {
          "label": "article",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl,paragraph"
        }
      },
      "categories": {
        "type": "Select",
        "config": {
          "label": "categories",
          "placeholder": "categories",
          "options": ["Letteratura", "Design", "Cinema", "Musica", "Games"]
        }
      },
      "external_link": {
        "type": "Group",
        "config": {
          "label": "external link",
          "repeat": true,
          "fields": {
            "link_title": {
              "type": "Text",
              "config": {
                "label": "link title",
                "placeholder": ""
              }
            },
            "link": {
              "type": "Link",
              "config": {
                "label": "link",
                "placeholder": "link",
                "allowTargetBlank": true,
                "select": null,
                "allowText": true
              }
            }
          }
        }
      },
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "mainimage": {
        "type": "Image",
        "config": {
          "label": "mainImage",
          "constraint": {},
          "thumbnails": []
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
